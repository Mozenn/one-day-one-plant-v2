<main
  style="
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 5rem;
  "
>
  <h2
    style="
      font-size: 1.5rem;
      background-color: rgb(68, 182, 64);
      padding: 0.7rem;
      border-radius: 10px;
      color: white;
      text-align: center;
      font-weight: 500;
    "
  >
    Email Verification
  </h2>
  <p style="text-align: center">
    Hi
    {{ username }},
    <br />
    You have yet to confirm your account. Please, click the link below to verify
    your email.
  </p>
  <p style="text-align: center">
    If not confirmed, your account will be deleted in
    {{ daysLeft }}
    days.
  </p>
  <a
    href="{{ url }}"
    role="button"
    style="
      text-decoration: underline;
      color: rgb(68, 182, 64);
      text-align: center;
      transition: color 0.4s;
      width: 100%;
      display: inline-block;
    "
    >Confirm Email</a
  >
</main>
